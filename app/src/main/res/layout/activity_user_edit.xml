<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.UserEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_mypage_user_edit_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_user_default_profile_image"
            android:layout_gravity="center"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/et_mypage_user_edit_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nickname"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/et_mypage_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:enabled="false"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_margin="16dp"/>

        <!--    <TextView-->
        <!--        android:id="@+id/tv_mypage_user_rate"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="3.5"-->
        <!--        android:textSize="22sp"-->
        <!--        android:textColor="@color/black"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_user_email"-->
        <!--        app:layout_constraintBottom_toTopOf="@+id/ll_mypage_user_music_genre_container"-->
        <!--        />-->

        <LinearLayout
            android:id="@+id/ll_mypage_user_music_genre_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/tv_mypage_user_what_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite music genre: "
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>







        </LinearLayout>

        <TextView
            android:id="@+id/tv_mypage_user_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:layout_gravity="center"
            android:layout_margin="16dp"/>


    </LinearLayout>

</ScrollView>